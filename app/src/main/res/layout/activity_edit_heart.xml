<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_edit_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="12dp"
            android:text="Edit Heart"
            android:textColor="@color/root"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_save_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:contentDescription="Search"
            android:padding="12dp"
            android:src="@drawable/outline_save_alt_24"
            tools:ignore="SpeakableTextPresentCheck" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_edit_heart"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic information"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                android:background="@drawable/background_title"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heart name"
                android:padding="5dp"
                android:textColor="@color/root"/>
            <EditText
                android:id="@+id/heart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heart A"
                android:minHeight="48dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:padding="5dp"
                android:textColor="@color/root"/>
            <EditText
                android:id="@+id/heart_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is heart A"
                android:minHeight="48dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interaction editing"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:background="@drawable/background_title"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/create_edit_interaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:textColor="@color/root"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Create and edit interaction"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
