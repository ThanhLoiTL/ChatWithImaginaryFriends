<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_heart">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_edit_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btn_save_heart"
            android:padding="12dp"
            android:text="@string/edit_heart"
            android:textColor="?attr/root"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_save_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:contentDescription="@string/save"
            android:padding="12dp"
            android:src="@drawable/outline_save_alt_24"
            tools:ignore="SpeakableTextPresentCheck" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_edit_heart"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/basic_information"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/background_title"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heart_name"
                android:textSize="@dimen/text_size"
                android:padding="5dp"
                android:textColor="?attr/root"/>

            <EditText
                android:id="@+id/heart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/name_heart"
                android:inputType="text"
                android:minHeight="48dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="@dimen/text_size"
                android:padding="5dp"
                android:textColor="?attr/root"/>
            <EditText
                android:id="@+id/heart_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:autofillHints=""
                android:hint="@string/description_heart"
                android:inputType="text"
                tools:ignore="LabelFor" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interaction_editing"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/background_title"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/create_edit_interaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:textColor="?attr/root"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:text="@string/create_and_edit_interaction"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
