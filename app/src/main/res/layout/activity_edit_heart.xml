<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_edit_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="12dp"
        android:text="Edit Heart"
        android:textColor="@color/root"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_save_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:contentDescription="Search"
        android:padding="12dp"
        android:src="@drawable/outline_save_alt_24"
        tools:ignore="SpeakableTextPresentCheck" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_edit_heart"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic information"
            android:textColor="@color/white"
            android:background="@color/root"
            android:padding="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heart name"
            android:padding="5dp"
            android:textColor="@color/root"/>
        <EditText
            android:id="@+id/heart_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heart A"
            android:minHeight="48dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:padding="5dp"
            android:textColor="@color/root"/>
        <EditText
            android:id="@+id/heart_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is heart A"
            android:minHeight="48dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interaction editing"
            android:textColor="@color/white"
            android:background="@color/root"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"/>
        <Button
            android:id="@+id/create_edit_interaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:textColor="@color/root"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Create and edit interaction"/>
    </LinearLayout>
</RelativeLayout>