<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Interaction"
        android:textSize="24sp"
        android:textColor="@color/root"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="12dp"/>
    <EditText
        android:id="@+id/txt_trigger_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_margin="10dp"
        android:hint="Please input a trigger word"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/btn_ok_interaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:text="OK"
            android:layout_marginLeft="20dp"
            android:textColor="@color/root"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_cancel_interaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_ok_interaction"
            android:text="CANCEL"
            android:layout_marginEnd="20dp"
            android:textColor="@color/root"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>