<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_round_corner_assignment_alert">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Theme"
        android:textSize="24sp"
        android:textColor="?attr/root"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">

        <ImageButton
            android:id="@+id/color_violet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minWidth="32dp"
            android:minHeight="48dp"
            android:layout_weight="3"
            android:src="@drawable/choose_color_violet" />
        <ImageButton
            android:id="@+id/color_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minWidth="32dp"
            android:minHeight="48dp"
            android:layout_weight="3"
            android:src="@drawable/choose_color_green" />
        <ImageButton
            android:id="@+id/color_blue"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minWidth="32dp"
            android:minHeight="48dp"
            android:src="@drawable/choose_color_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:weightSum="9">

        <ImageButton
            android:id="@+id/color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minWidth="32dp"
            android:minHeight="48dp"
            android:layout_weight="3"
            android:src="@drawable/choose_color_red" />
        <ImageButton
            android:id="@+id/color_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minWidth="32dp"
            android:minHeight="48dp"
            android:layout_weight="3"
            android:src="@drawable/choose_color_orange" />
        <ImageButton
            android:id="@+id/color_black"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minWidth="32dp"
            android:minHeight="48dp"
            android:src="@drawable/choose_color_black" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/btn_cancel_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="CANCEL"
            android:textSize="@dimen/text_size"
            android:textColor="?attr/root"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>