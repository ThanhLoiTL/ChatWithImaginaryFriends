<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/trigger_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Trigger words"
            android:textColor="#0b0b0b"
            android:layout_marginEnd="40dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/reply_pattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trigger_words"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="40dp"
            android:text="Status Displays here"
            android:textColor="#6a6a6a"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/reply_pattern"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="10dp"
            android:background="#a6a6a6" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_delete_interaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:background="@null"
        android:contentDescription="Delete interaction"
        android:minWidth="32dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_delete_outline_24" />
</RelativeLayout>