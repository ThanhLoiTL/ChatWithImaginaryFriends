<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_round_corner_assignment_alert">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_heart"
        android:textSize="24sp"
        android:textColor="?attr/root"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/heart_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/heart_name"
        android:minHeight="48dp"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:inputType="text" />
    <EditText
        android:id="@+id/heart_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_heart"
        android:minHeight="48dp"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:inputType="text" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/btn_ok_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:text="@string/ok"
            android:textColor="?attr/root"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_cancel_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="@string/cancel"
            android:textColor="?attr/root"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>