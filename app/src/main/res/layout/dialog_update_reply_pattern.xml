<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Reply Pattern"
        android:textSize="24sp"
        android:textColor="@color/root"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/txt_update_reply_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input a reply pattern"
        android:minHeight="48dp"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/btn_ok_reply_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/btn_delete_reply_pattern"
            android:text="OK"
            android:textColor="@color/root"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_cancel_reply_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_ok_reply_pattern"
            android:text="CANCEL"
            android:textColor="@color/root"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_delete_reply_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:textColor="@color/root"
            android:textStyle="bold"/>
    </RelativeLayout>

</LinearLayout>